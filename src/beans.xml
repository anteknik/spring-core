<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
    "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
    
<beans>
	<bean id="greeting" class="net.nadisa.anan.Greetings">
		<property name="message" value="Hello Spring"></property>
	</bean>	
	
	<bean id="eventHandler" class="net.nadisa.anan.event.UserDefinedEventHandler"/>
	
	<bean id="eventPublisher" class="net.nadisa.anan.event.publisher.UserDefinedEventPublisher"/>
</beans>
