<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
    "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
    
<beans>
	<bean id="greeting" class="net.nadisa.anan.Greetings">
		<property name="message" value="Hello Spring"></property>
	</bean>	
	<bean id="contextStart" class="net.nadisa.anan.listener.ContextStartListener"/>
	<bean id="contextStop" class="net.nadisa.anan.listener.ContextStopListener"/>
	<bean id="contextClose" class="net.nadisa.anan.listener.ContextCloseListener"/>
	<bean id="contextRefresh" class="net.nadisa.anan.listener.ContextRefreshListener"/>
</beans>
<!-- Instead of putting init and destroy method under bean can also put as a default method in beans
